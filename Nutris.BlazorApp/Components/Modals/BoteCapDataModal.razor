        {
            var script = $@"
            (function() {{
                // Obtener el contenedor del bote
                var bottleContainer = document.getElementById('bottle-container-{ComponentId}');
                if (!bottleContainer) return;

                // Obtener el SVG del bote
                var bottleSvg = bottleContainer.querySelector('svg');
                if (!bottleSvg) return;

                // Obtener las dimensiones reales del SVG
                var svgRect = bottleSvg.getBoundingClientRect();
                var containerRect = bottleContainer.getBoundingClientRect();

                // Calcular la altura real del bote (sin el cuello)
                var bottleHeight = svgRect.height * 0.85; // 85% para excluir el cuello
                var bottleTop = svgRect.top - containerRect.top + (svgRect.height * 0.15); // 15% desde arriba

                // Ajustar la línea de altura
                var dimLeft = document.getElementById('dim-left-{ComponentId}');
                if (dimLeft) {{
                    dimLeft.style.top = bottleTop + 'px';
                    dimLeft.style.height = bottleHeight + 'px';
                }}

                // Ajustar la posición de la línea superior
                var dimTop = document.querySelector('#dimension-lines-{ComponentId} .dimension-top');
                if (dimTop) {{
                    var topPosition = svgRect.top - containerRect.top - 15;
                    dimTop.style.top = topPosition + 'px';
                }}

                // Ajustar la posición de la línea inferior
                var dimBottom = document.querySelector('#dimension-lines-{ComponentId} .dimension-bottom');
                if (dimBottom) {{
                    var bottomPosition = containerRect.height - (svgRect.bottom - containerRect.top) - 15;
                    dimBottom.style.bottom = bottomPosition + 'px';
                }}

                // Ajustar el ancho de las líneas horizontales según el ancho del bote
                if (dimTop) {{
                    dimTop.style.width = (svgRect.width * 0.6) + 'px';
                }}
                if (dimBottom) {{
                    dimBottom.style.width = (svgRect.width * 0.85) + 'px';
                }}
            }})();
        ";

            await JSRuntime.InvokeVoidAsync("eval", script);
        }
        catch (Exception ex)
        {
            Logger?.LogWarning("Error adjusting dimension lines: {Message}", ex.Message);
        }
    }
     
     

    

    
