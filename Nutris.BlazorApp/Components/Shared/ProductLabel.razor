@namespace NutrisBlazor.Components.Shared
@using Microsoft.AspNetCore.Components

<div class="product-label-container">
    <div class="product-label">
        <div class="label-row">
            <span class="label-title">PRODUCT NAME:</span>
        </div>
        <div class="label-row">
            <span class="label-value">@ProductName</span>
        </div>

        <div class="label-row">
            <span class="label-title">BATCH: </span>
            <span class="label-value">@BatchNumber</span>
        </div>

        <div class="label-row">
            <span class="label-title">EXP. DATE: </span>
            <span class="label-value">@ExpirationDate</span>
        </div>

        <div class="label-row">
            <span class="label-title">QUANTITY:</span>
            <span class="label-value">@Quantity</span>
        </div>

       
    </div>
</div>

@code {
    [Parameter] public string ProductName { get; set; } = "(Xpc/jar)";
    [Parameter] public string BatchNumber { get; set; } = "YY_XX";
    [Parameter] public string ExpirationDate { get; set; } = "DD/MM/YYYY";
    [Parameter] public string Quantity { get; set; } = "";
}

<style>
    .product-label-container {
        display: inline-block;
        padding: 20px;
    }

    .product-label {
        background: white;
        border: 2px solid #d0d0d0;
        border-radius: 12px;
        padding: 25px 30px;
        width: 280px;
        font-family: Arial, sans-serif;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .label-row {
        margin: 8px 0;
        line-height: 1.4;
    }

    .label-title {
        font-weight: 600;
        font-size: 14px;
        color: #333;
        display: inline-block;
    }

    .label-value {
        font-weight: 400;
        font-size: 14px;
        color: #333;
        display: inline-block;
    }

    /* Estilos específicos para cada fila */
    .label-row:nth-child(1) {
        margin-bottom: 2px;
    }

    .label-row:nth-child(2) {
        margin-bottom: 15px;
        padding-left: 20px;
    }

        .label-row:nth-child(2) .label-value {
            font-style: italic;
        }

    .quantity-row {
        min-height: 40px;
        border-bottom: 1px solid #e0e0e0;
        margin-top: 5px;
        padding-bottom: 10px;
    }

    /* Responsive */
    @@media (max-width: 480px) {
        .product-label-container

    {
        padding: 10px;
    }

    .product-label {
        width: 100%;
        max-width: 280px;
        padding: 20px;
    }

    }

    /* Para impresión */
    @@media print {
        .product-label-container

    {
        padding: 0;
    }

    .product-label {
        border: 1px solid #000;
        box-shadow: none;
    }

    }
</style>
